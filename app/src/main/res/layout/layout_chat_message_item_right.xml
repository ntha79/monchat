<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:paddingRight="@dimen/padding_all"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_all"
        android:layout_marginRight="@dimen/padding_all"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/padding_all"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_roundrect_chat_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_chat_msg_item_right_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_bottom"
                android:gravity="right"
                android:minWidth="70dp"
                android:text="OWNER"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_smallx"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_chat_msg_item_right_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:minWidth="70dp"
                android:text="MSG    wfwf"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_smallx" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/textView_chat_msg_item_right_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="12:34"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:minWidth="70dp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_smallxx" />

                <ImageView
                    android:id="@+id/imageView_chat_msg_item_right_status"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_done_one" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_weight="0"
        android:id="@+id/imageView_chat_msg_item_right_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</LinearLayout>