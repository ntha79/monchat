<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_all"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:padding="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_contactitem_alphabet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_largex"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:padding="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_contactitem_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_logo" />

        <TextView
            android:id="@+id/textView_contactitem_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="NH"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_largex"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/padding_all"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_contactitem_fullname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="left|center"
                android:textSize="@dimen/text_normal"
                android:textColor="@android:color/black"
                android:text="Thang IT" />

            <ImageView
                android:id="@+id/imageView_contactitem_status"
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_done_one" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView_contactitem_lastmessage"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left|center"
            android:textSize="@dimen/text_small"
            android:textColor="@android:color/darker_gray"
            android:text="abc xÃ½" />
    </LinearLayout>

</LinearLayout>