<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_all"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:padding="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_chattitle_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_logo" />

        <TextView
            android:id="@+id/textView_chattitle_name"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="NH"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_largex"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/padding_all"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_chattitle_secret"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_menu_secret" />
            <TextView
                android:id="@+id/textView_chattitle_fullname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2.0"
                android:gravity="left|center"
                android:textSize="@dimen/text_normal"
                android:textColor="@android:color/black"
                android:text="Thang IT" />

            <ImageView
                android:id="@+id/imageView_chattitle_status"
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_done_one" />

            <TextView
                android:id="@+id/textView_chattitle_time"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:textSize="@dimen/text_normal"
                android:textColor="@android:color/black"
                android:text="14:23" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_chattitle_lastmessage"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="left|center"
            android:textSize="@dimen/text_small"
            android:textColor="@android:color/darker_gray"
            android:text="abc xÃ½" />
    </LinearLayout>

</LinearLayout>